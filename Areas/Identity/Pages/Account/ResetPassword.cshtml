@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Şifrenizi Belirleyin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card p-4 shadow-lg" style="border-radius:16px;">

        <h2 class="fw-bold text-dark mb-4 text-center">Şifrenizi Belirleyin</h2>

        <form method="post">
          @* Kod (token) mutlaka gizli alan olarak taşınmalı *@
          <input type="hidden" asp-for="Input.Code" />
          @* E-posta formda görünmesin ama model validasyonu için gizli gönderelim *@
          <input type="hidden" asp-for="Input.Email" />

          <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

          <div class="mb-3">
            <label asp-for="Input.Password" class="form-label fw-bold text-dark">Şifre</label>
            <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label asp-for="Input.ConfirmPassword" class="form-label fw-bold text-dark">Şifre Tekrar</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
          </div>

          <button type="submit" class="btn btn-primary w-100 fw-bold">Şifreyi Kaydet</button>
        </form>

      </div>
    </div>
  </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
