@page
@model NotApp.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card p-4 shadow-lg" style="border-radius:16px;">
            
            <!-- Logo -->
            <div class="text-center mb-4">
                <img src="~/img/mtu-logo.png" alt="MTÜ" style="width:80px; height:auto;" />
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-semibold text-dark">E-posta Adresi</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label fw-semibold text-dark">Şifre</label>
                    <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold text-dark">Şifre Tekrar</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">Kayıt Ol</button>
            </form>

            <div class="text-center mt-3">
                <span>Zaten hesabınız var mı?</span>
                <a asp-page="./Login" class="text-decoration-none">Giriş Yap</a>
            </div>
        </div>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
