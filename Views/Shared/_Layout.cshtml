@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NotApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/img/mtu-logo.png" />
</head>
<body>
    <header class="navbar navbar-dark app-navbar shadow-sm">
        <div class="container-xl d-flex align-items-center gap-3">
            <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                <img src="~/img/mtu-logo.png" alt="MTÜ" class="brand-logo" />
                <span class="brand-title">MTÜ Not Paylaşım Platformu</span>
            </a>

            <nav class="ms-auto d-flex align-items-center gap-3">
                <a class="nav-link link-light" asp-controller="Home" asp-action="Index">Anasayfa</a>
                <a class="nav-link link-light" asp-controller="Notes" asp-action="Upload">Yükle</a>
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="btn btn-outline-light btn-sm" asp-area="Identity" asp-page="/Account/Manage/Index">Hesabım</a>
                    <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index","Home")" method="post">
                        <button class="btn btn-light btn-sm ms-1">Çıkış</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-light btn-sm" asp-area="Identity" asp-page="/Account/Login">Giriş</a>
                }
            </nav>
        </div>
    </header>

    <main class="py-4">
        <div class="container-xl">
            @RenderBody()
        </div>
    </main>

    <footer class="app-footer">
        <div class="container-xl d-flex justify-content-between flex-wrap gap-2">
            <span>© @DateTime.Now.Year MTÜ • Not & Ödev Sistemi</span>
            <span class="text-muted">v1.0</span>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
