@model NotApp.Models.NoteItem
@{
    ViewData["Title"] = "Not Yükle";
}

<h1 class="h3 mb-3 text-white">Not Yükle</h1>

<div class="card p-4 shadow-lg" style="border-radius:16px;">
  <form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="row g-3">

      <div class="col-12">
        <label class="form-label text-dark fw-semibold">Başlık</label>
        <input asp-for="Title" class="form-control" required />
        <span class="text-danger" asp-validation-for="Title"></span>
      </div>

      <div class="col-12">
        <label class="form-label text-dark fw-semibold">Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
      </div>

      <!-- ✅ Belge Türü dropdown -->
      <div class="col-12">
        <label asp-for="DocumentType" class="form-label text-dark fw-semibold"></label>
        <select asp-for="DocumentType"
                class="form-select"
                asp-items="Html.GetEnumSelectList<NotApp.Models.DocumentType>()">
            <option value="">Seçiniz</option>
        </select>
        <span class="text-danger" asp-validation-for="DocumentType"></span>
      </div>

      <div class="col-12">
        <label class="form-label text-dark fw-semibold">Dosya</label>
        <input type="file" name="file" class="form-control" />
      </div>

      <div class="col-md-6">
        <label class="form-label text-dark fw-semibold">Fakülte</label>
        <select class="form-select" asp-for="Faculty" id="Faculty" data-faculty>
          <option value="">Fakülte Seçiniz</option>
          <!-- JS dolduracak -->
        </select>
        <span class="text-danger" asp-validation-for="Faculty"></span>
      </div>

      <div class="col-md-6">
        <label class="form-label text-dark fw-semibold">Bölüm</label>
        <select class="form-select" asp-for="Department" id="Department" data-department disabled>
          <option value="">Önce Fakülte Seçiniz</option>
        </select>
        <span class="text-danger" asp-validation-for="Department"></span>
      </div>

      <div class="col-md-6">
        <label class="form-label text-dark fw-semibold">Sınıf</label>
        <select asp-for="ClassLevel" class="form-select">
          <option value="">Sınıf Seç</option>
          <option>1. Sınıf</option><option>2. Sınıf</option>
          <option>3. Sınıf</option><option>4. Sınıf</option>
        </select>
      </div>

      <!-- ❌ Ders Kodu alanı kaldırıldı -->

      <div class="col-md-6">
        <label class="form-label text-dark fw-semibold">Ders Adı</label>
        <input asp-for="CourseName" class="form-control" placeholder="Örnek: Veri Yapıları" />
      </div>

      <div class="col-12 d-flex justify-content-end">
        <a asp-action="Index" class="btn btn-outline-secondary me-2">Vazgeç</a>
        <button type="submit" class="btn btn-navy">Yükle</button>
      </div>
    </div>
  </form>
</div>

@section Scripts{
  <partial name="_ValidationScriptsPartial" />
}
