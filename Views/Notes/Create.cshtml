@model NotApp.Models.NoteItem
@{
    ViewData["Title"] = "Not Yükle";
    var faculties = (IEnumerable<string>) (ViewBag.Faculties ?? new List<string>());
    var classLevels = (IEnumerable<string>) (ViewBag.ClassLevels ?? new List<string>());
}

<h1 class="page-title">Not Yükle</h1>

<div class="card card-glass p-4">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Başlık</label>
                <input asp-for="Title" class="form-control" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Dosya Linki (URL)</label>
                <input asp-for="FileUrl" class="form-control" placeholder="https://..." />
            </div>

            <div class="col-md-6">
                <label class="form-label">Ad Soyad (Görünen)</label>
                <input asp-for="StudentDisplayName" class="form-control" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Kullanıcı Adı</label>
                <input asp-for="StudentUserName" class="form-control" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Fakülte</label>
                <select asp-for="Faculty" class="form-select">
                    <option value="">Seçiniz</option>
                    @foreach (var f in faculties)
                    {
                        <option value="@f">@f</option>
                    }
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label">Bölüm</label>
                <input asp-for="Department" class="form-control" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Sınıf</label>
                <select asp-for="ClassLevel" class="form-select">
                    <option value="">Seçiniz</option>
                    @foreach (var c in classLevels)
                    {
                        <option value="@c">@c</option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">Ders Kodu</label>
                <input asp-for="CourseCode" class="form-control" />
            </div>

            <div class="col-md-9">
                <label class="form-label">Ders Adı</label>
                <input asp-for="CourseName" class="form-control" />
            </div>

            <div class="col-12">
                <label class="form-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="col-12 d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-outline-light me-2">Vazgeç</a>
                <button class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
