@model NotApp.Controllers.NotesIndexVM
@{
    ViewData["Title"] = "Notlar";
}

<!-- Bu sayfaya √∂zel: card-glass overlay klik engellemesin -->
<style>
    .card-glass,
    .card-glass::before,
    .card-glass::after { pointer-events: none; }
    .card-glass * { pointer-events: auto; } /* form elemanlarƒ± tƒ±klanabilir */
</style>

<div class="container py-4">
    <div class="mb-4">
        <!-- overlay altƒ±nda kalmamasƒ± i√ßin z-index -->
        <form method="get" class="card card-glass p-3 position-relative" style="z-index:1;">
            <div class="row g-2 align-items-center">
                <div class="col-12">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input name="q" value="@Model.Q" class="form-control" placeholder="Not ara..." autocomplete="off" />
                    </div>
                </div>

                <!-- Fak√ºlte -->
                <div class="col-6 col-md-3">
                    <select name="faculty" class="form-select">
                        <option value="">Fak√ºlte Se√ß</option>
                        @foreach (var f in Model.Faculties)
                        {
                            if (Model.Faculty == f)
                            {
                                <option value="@f" selected>@f</option>
                            }
                            else
                            {
                                <option value="@f">@f</option>
                            }
                        }
                    </select>
                </div>

                <!-- Sƒ±nƒ±f -->
                <div class="col-6 col-md-3">
                    <select name="classLevel" class="form-select">
                        <option value="">Sƒ±nƒ±f Se√ß</option>
                        @foreach (var c in Model.ClassLevels)
                        {
                            if (Model.ClassLevel == c)
                            {
                                <option value="@c" selected>@c</option>
                            }
                            else
                            {
                                <option value="@c">@c</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-12 col-md-2 text-md-end">
                    <button class="btn btn-primary btn-lg w-100" type="submit">Filtrele</button>
                </div>
            </div>
        </form>
    </div>

    <h1 class="display-5 fw-bold text-light mb-4">MT√ú Not Payla≈üƒ±m Platformu</h1>

    <div class="vstack gap-4">
        @if (!Model.Items.Any())
        {
            <div class="card card-glass p-4">
                <div class="text-secondary">Kriterlere uygun not bulunamadƒ±.</div>
            </div>
        }
        else
        {
            @foreach (var n in Model.Items)
            {
                <div class="card card-glass p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between">
                        <div class="me-3">
                            <div class="text-uppercase fw-bold text-light fs-5">@n.StudentDisplayName</div>
                            <div class="text-secondary small">@n.StudentUserName</div>
                            <ul class="list-unstyled mt-3 mb-0 text-light">
                                <li class="mb-1"><span class="me-2">üèõÔ∏è</span><strong>Fak√ºlte:</strong> @n.Faculty</li>
                                <li class="mb-1"><span class="me-2">üè¢</span><strong>B√∂l√ºm:</strong> @n.Department</li>
                                <li class="mb-1"><span class="me-2">üéì</span><strong>Sƒ±nƒ±f:</strong> @n.ClassLevel</li>
                                <li class="mb-1"><span class="me-2">üìö</span><strong>Ders:</strong> @n.CourseCode ‚Äî @n.CourseName</li>
                            </ul>
                        </div>
                        <div class="mt-3 mt-md-0 text-md-end">
                            @if (!string.IsNullOrWhiteSpace(n.FileUrl))
                            {
                                <a class="btn btn-danger btn-lg" href="@n.FileUrl" target="_blank" rel="noopener">
                                    <i class="bi bi-download me-2"></i>G√∂r√ºnt√ºle
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-danger btn-lg" disabled>
                                    <i class="bi bi-download me-2"></i>G√∂r√ºnt√ºle
                                </button>
                                <div class="small text-secondary mt-2">(Dosya linki eklenmemi≈ü)</div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
